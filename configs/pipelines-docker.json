{
  "sensor-data":{
    "connector_in": {
      "type": "mqtt",
      "topic": "/topic/+/event",
      "server": "mqtt://localhost:1884",
      "qos": 1,
      "retry_attempts": 5
    },
    "connector_out":{
      "type":"gcp_pubsub",
      "authbundle_id":"real_gcp",
      "project_id":"feisty-enigma-416319",
      "topic_id":"sensor-data",
      "attributes":{
        "deviceId":"{{topic[2]}}",
        "projectId": "G-NODE"
      }
    },
    "filtras":[
      {
          "type": "comparator",
          "operator": "gt",
          "decoder": "json",
          "value_key": "temp",
          "comparand": 5.4
      },
      {
          "type": "finder",
          "operator": "contain",
          "logical_negation": true,
          "string": "LOG"
      }
    ]
  },
  "commands":{
    "connector_in": {
      "type": "gcp_pubsub",
      "authbundle_id":"real_gcp",
      "project_id": "feisty-enigma-416319",
      "subscription_id": "commands"
    },
    "connector_out": {
      "type": "mqtt",
      "topic": "/devices/{{node_id}}/commands/{{command}}",
      "server": "mqtt://localhost:1884",
      "qos": 1,
      "retry_attempts": 5
    }
  },
  "internal_control_loop": {
    "connector_in": {
      "type": "mqtt",
      "topic": "/alerts",
      "server": "mqtt://localhost:1884"
    },
    "filtras":[
      {
        "type": "comparator",
        "operator": "gt",
        "decoder": "json",
        "value_key": "temp",
        "comparand": 45
      },
      {
        "type": "builder",
        "encoder": "json",
        "attributes":{
          "cooler_on": true
        }
      }
    ],
    "connector_out": {
      "type": "mqtt",
      "topic": "/actions",
      "server": "mqtt://localhost:1884"
    }
  }
}
